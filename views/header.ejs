<div class="border-b-2">
    <header class="container mx-auto p-4">
        <ul class="flex justify-end items-center text-2xl space-x-4">
            <li class="mr-auto">
                <a href="/" class="flex items-center font-bold">
                    <img src="/images/logo/logo.webp" alt="" class="h-8">
                    <span>
                        Only<span class="text-blue-500">Files</span>
                    </span>
                </a>
            </li>
            <% if (locals.currentUser) { %>
            <li class="group">
                <a href="/drive">Open Drive</a>
                <div class="border-b-2 border-blue-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-200"></div>
            </li>
            <% } else { %>
            <li class="group">
                <a href="/register">Register</a>
                <div class="border-b-2 border-blue-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-200"></div>
            </li>
            <li class="group">
                <a href="/login">Login</a>
                <div class="border-b-2 border-blue-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-200"></div>
            </li>
            <% } %>
        </ul>
    </header>
</div>